      <p><%= t "home.find-a-trip-descr" %></p>
    </div>
    <div class="action-illustration">
      <img src="http://res.cloudinary.com/dyub4bz6x/image/upload/v1516466362/demo_iojjsx.gif" class="shadow-demo" alt="">
    </div>
  </div>
  <!-- CREATE -->
  <div class="action-container">
    <div class="action-text">
      <h3><i class="fa fa-plus" aria-hidden="true"></i><%= t "home.create-a-trip" %></h3>
