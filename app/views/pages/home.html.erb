    <div class="explore-btn">
      <!-- pop on click -->
      <div id="open-mc-popup" class="btn btn-explore btn-full-width open-popup" onclick="showMailPopup()" ><%= t "home.register" %>
      </div>
    </div>
    <!-- a reactiver après phase mail -->
    <%#= link_to  trips_path ,{:class=>"btn btn-explore btn-full-width"} do %>
    <%#= t "home.explore" %>
    <%# end %>
  </div>
</header>
