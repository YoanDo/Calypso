<header class="heropanel--video curve-mask" data-vide-bg="mp4:https://res.cloudinary.com/dyub4bz6x/video/upload/v1503833173/banner-calypso_br9sj1.mp4", poster: https://static.pexels.com/photos/342469/pexels-photo-342469.jpeg data-vide-options="posterType: png, loop: true, muted: true, position: 50% 50%">
  <div class="navbar-wagon">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand logo-nav" do %>
    CALYPSO<span>/</span>
    <% end %>
  </div>
  <div class="header-content">
    <%#= I18n.locale %>
    <div class="heropanel__content">
      <h1><%= t "home.join-a-trip" %></h1>
      <h1><%= t "home.meet-surfers" %></h1>
      <h1><%= t "home.create-adventures" %></h1>
    </div>
    <!-- searchbar -->
    <!-- <#%= render 'shared/search' %> -->
